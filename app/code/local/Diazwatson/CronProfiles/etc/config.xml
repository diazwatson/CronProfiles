<config>
    <modules>
        <Diazwatson_CronProfiles>
            <version>0.1.0</version>
        </Diazwatson_CronProfiles>
    </modules>
    <global>
        <models>
            <i4cronprofiles>
                <class>Diazwatson_CronProfiles_Model</class>
            </i4cronprofiles>
        </models>
        <helpers>
            <i4cronprofiles>
                <class>Diazwatson_CronProfiles_Helper</class>
            </i4cronprofiles>
        </helpers>
    </global>
    <crontab>
        <jobs>
            <i4_cronprofiles>
                <schedule>
                    <cron_expr>0 0 * * * *</cron_expr>
                    <config_path>i4cronprofiles/general/cron_syntax</config_path>
                </schedule>
                <run>
                    <model>i4cronprofiles/cron::runDataFlowProfile</model>
                </run>
            </i4_cronprofiles>
        </jobs>
    </crontab>
    <default>
        <i4cronprofiles>
            <general>
                <enabled>0</enabled>
                <cron_syntax>0 0 * * * *</cron_syntax>
            </general>
        </i4cronprofiles>
    </default>
</config>