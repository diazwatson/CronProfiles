<config>
    <sections>
        <i4cronprofiles translate="label" module="i4cronprofiles">
            <tab>i4all</tab>
            <label>Cron Profiles</label>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general>
                    <label>General</label>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled>
                            <label>Enabled</label>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <frontend_type>select</frontend_type>
                        </enabled>
                        <profile_ids>
                            <label>Profile Ids</label>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <frontend_type>text</frontend_type>
                            <comment><![CDATA[Profile Ids separated by (,)<br /><strong>Example:</strong> 1,2,3,4]]></comment>
                            <depends>
                                <enabled>1</enabled>
                            </depends>
                        </profile_ids>
                        <cron_syntax>
                            <label>Cron Expresion</label>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <frontend_type>text</frontend_type>
                            <comment><![CDATA[Interval of time data flow profiles will be executed. <br/><strong>Example:</strong> 0 0 * * * * <br/>(will be executed every day at midnight).]]></comment>
                            <depends>
                                <enabled>1</enabled>
                            </depends>
                            <disable_index>
                                <label>Disabled Index</label>
                                <sort_order>40</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>1</show_in_store>
                                <source_model>adminhtml/system_config_source_yesno</source_model>
                                <frontend_type>select</frontend_type>
                                <comment><![CDATA[Very recommended specially if you are loading catalog products.]]></comment>
                                <depends>
                                    <enabled>1</enabled>
                                </depends>
                            </disable_index>
                        </cron_syntax>
                    </fields>
                </general>
            </groups>
        </i4cronprofiles>
    </sections>
</config>